{
  "name": "backlccomp",
  "version": "1.0.0",
  "description": "backend lcComp",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "nodemon ./src/app.js",
    "dev": "npm run dev:css & npm run dev:server",
    "dev:css": "tailwindcss -i ./src/public/css/input.css -o ./src/public/output.css --watch",
    "dev:server": "node --watch ./src/app.js",
    "dev:windows": "start \"Tailwind\" npm run dev:css && start \"Server\" npm run dev:server",
    "build:css": "tailwindcss -i ./src/public/css/input.css -o ./src/output.css --minify",
    "test": "dotenv -e .env.test -- mocha --timeout 10000 --require test/mochaHooks.js \"test/**/*.test.js\""
  },
  "author": "angel borrego",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-handlebars": "^7.0.7",
    "express-routemap": "^1.6.0",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.1.0",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "chai": "^6.2.1",
    "dotenv-cli": "^11.0.0",
    "mocha": "^11.7.5",
    "standard": "^17.1.2",
    "supertest": "^7.1.4",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json"
  }
}
