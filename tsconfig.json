{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
